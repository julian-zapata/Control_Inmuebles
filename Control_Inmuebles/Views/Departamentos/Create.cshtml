@model Control_Inmuebles.Models.Inmuebles___Copia.Departamento

@{
    ViewData["Title"] = "Create";
    SelectList listaEdificios = ViewBag.ListaEdificios;
}

<h1>Create</h1>

<div class="row">
    <div class="col-2 pt-1">
        <h4>Departamento</h4>
    </div>
    <div class="col-2">
        <button type="button" class="btn btn-secondary  btn-block" id="EdificioBT">Agregar edificio</button>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EdificioId" class="control-label"></label>
                <select asp-for="EdificioId" asp-items="listaEdificios" class="form-control"></select>
                <span asp-validation-for="EdificioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Piso" class="control-label"></label>
                <input asp-for="Piso" class="form-control" />
                <span asp-validation-for="Piso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dpto" class="control-label"></label>
                <input asp-for="Dpto" class="form-control" />
                <span asp-validation-for="Dpto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ambientes" class="control-label"></label>
                <select asp-for="Ambientes" class="form-control">
                    <option>Mono ambiente</option>
                    <option selected>1 dormitorio</option>
                    <option>2 dormitorios</option>
                </select>
                <span asp-validation-for="Ambientes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Observacion" class="control-label"></label>
                <input asp-for="Observacion" class="form-control" />
                <span asp-validation-for="Observacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
