@model IEnumerable<Control_Inmuebles.Models.Vinculos.ContratoDepartamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Inquilino
            </th>
            <th>
                Edificio
            </th>
            <th>
                Departamento
            </th>
            <th>
                Cuota 1er Año
            </th>
            <th>
                Fin Contrato
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GetInquilino().NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GetDepartamento().DatoEdificio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GetDepartamento().DatosSoloDepto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CuotaMensualPrimerAño)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClausuraContrato)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
