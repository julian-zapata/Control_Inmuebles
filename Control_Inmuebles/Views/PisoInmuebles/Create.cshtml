@model Control_Inmuebles.Models.Inmuebles.PisoInmueble

@{
    ViewData["Title"] = "Create";
    SelectList tipoBaseInmueble = ViewBag.ListaTipoInmueble;
    SelectList direcInmueble = ViewBag.ListaDirecInmueble;
}

<h1>Create</h1>

<h4>PisoInmueble</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BaseInmuebleId" class="control-label"></label>
                <select asp-for="BaseInmuebleId" asp-items=direcInmueble class="form-control" id="DirecInmueble"></select>
                <span asp-validation-for="BaseInmuebleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoInmuebleId" class="control-label"></label>
                <select asp-for="TipoInmuebleId" asp-items=tipoBaseInmueble class="form-control" id="tipoInmueble"></select>
                <span asp-validation-for="TipoInmuebleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" id="Piso" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div id="PisosCreados"></div>

            <div class="form-group">
                <input type="submit" value="Create" id="CreaPisos" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

   <script>
       $(document).ready(function () {

           $("#CreaPisos").click(function (){

               var piso = $("#Piso").val();
               var direccion = $("#DirecInmueble").val();
               var tipo = $("#tipoInmueble").val();

               for(var i = 0; i > piso.length(); i++) {

                   pisos = {
                       baseInmuebleId: direccion,
                       tipoInmuebleId: tipo,
                       numPiso: i.val()
                   };

                   $.post("/PisoInmuebles/GetDatoInmueble/", pisos, function (response) {
                       $("$PisosCreados").html(response);
                       console.log(response);
                   })

                   return true;
               }
           });
       });
   </script>

}
