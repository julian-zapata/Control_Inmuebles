@model Control_Inmuebles.Models.Movimientos.CobroCuotaDepartamento

@{
    ViewData["Title"] = "Create";
    SelectList ListaAlquileres = ViewBag.alquileres;
}

<h1>Create</h1>

<h4>CobroCuotaDepartamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaCobro" class="control-label"></label>
                <input asp-for="FechaCobro" class="form-control" />
                <span asp-validation-for="FechaCobro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inquilino" class="control-label"></label>
                <select asp-for="AlquilerId" asp-items="ListaAlquileres" class="form-control" id="Cobro-Contrato-Create"></select>
                <span asp-validation-for="AlquilerId" class="text-danger"></span>
                @*Muestra lista de inquilinos con sus respectivos departamentos*@
            </div>
            
            <div class="form-group">
                <label asp-for="CoutaAlquiler" class="control-label"></label>
                <input asp-for="CoutaAlquiler" class="form-control" />
                <span asp-validation-for="CoutaAlquiler" class="text-danger"></span>
                @*Combo en cascada con respecto contrato*@
            </div>
            <div class="form-group">
                <label asp-for="CuotaAgua" class="control-label"></label>
                <input asp-for="CuotaAgua" class="form-control" />
                <span asp-validation-for="CuotaAgua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoutaMunicipal" class="control-label"></label>
                <input asp-for="CoutaMunicipal" class="form-control" />
                <span asp-validation-for="CoutaMunicipal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoutaRentas" class="control-label"></label>
                <input asp-for="CoutaRentas" class="form-control" />
                <span asp-validation-for="CoutaRentas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
